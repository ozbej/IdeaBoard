            <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
            </ul>
          </div>--> <!--/.well -->
        </div><!--/span-->
      </div><!--/row-->

    </div> <!-- /container -->

  </body>
</html>
